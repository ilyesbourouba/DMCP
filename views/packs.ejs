        <script type="text/javascript">
            Dropzone.autoDiscover = false;
            var drop = document.getElementById('dropzone');
            var myDropzone = new Dropzone(drop, {
                url: "/file/post",
                addRemoveLinks: true,
                maxFiles: 1, // Allow only 1 file
                acceptedFiles: 'image/*', // Accept only images
                init: function() {
                    // When a file is added, remove previous one (to enforce single upload)
                    this.on("addedfile", function(file) {
                        if (this.files.length > 1) {
                            this.removeFile(this.files[0]); // Remove the older file
                        }
                    });
                }
            });
            var edit_drop = document.getElementById('edit_dropzone')
            var edit_Dropzone = new Dropzone(edit_drop, {
                url: "/file/post",
                addRemoveLinks: true

            });
        </script>
        <script>
            document.addEventListener("DOMContentLoaded", function() {
                const addProductBtn = document.getElementById("add_product");
                const productList = document.getElementById("product_list");
                const totalPriceElement = document.getElementById("show_total_price");


                function updateTotalPrice() {
                    let total = 0;
                    document.querySelectorAll("#product_list select").forEach(select => {
                        const selectedOption = select.options[select.selectedIndex];
                        total += parseFloat(selectedOption.getAttribute("data-price")) || 0;
                    });
                    totalPriceElement.textContent = total.toFixed(2) + " DA";
                }

                addProductBtn.addEventListener("click", function() {
                    const productItem = document.createElement("div");
                    productItem.classList.add("col-lg-3", "product-item");

                    productItem.innerHTML = `
                        <div class="input-group mb-3">
                            <select class="form-control" name="products[]">
                                <% products.forEach(prod => { %>
                                    <option value="<%= prod.id %>" data-price="<%= prod.price %>"><%= prod.name_fr %></option>
                                <% }) %>
                            </select>
                            <button type="button" class="badge bg-gradient-danger remove_product" style="border-color:#ef4444">X</button>
                        </div>
                    `;

                    productList.appendChild(productItem);
                    updateTotalPrice();

                    // Ajouter un écouteur d'événement pour recalculer le prix lors du changement de produit
                    productItem.querySelector("select").addEventListener("change", updateTotalPrice);
                });

                productList.addEventListener("click", function(event) {
                    if (event.target.classList.contains("remove_product")) {
                        event.target.closest(".product-item").remove();
                        updateTotalPrice();
                    }
                });

                // Ajouter un écouteur global pour les changements de sélection
                productList.addEventListener("change", function(event) {
                    if (event.target.tagName === "SELECT") {
                        updateTotalPrice();
                    }
                });
            });
        </script>

        <script>
            $('#add').click(function() {
                var formData = new FormData();

                formData.append("name_fr", $('#name_fr').val());
                formData.append("name_en", $('#name_en').val());
                formData.append("name_ar", $('#name_ar').val());

                formData.append("description_fr", $('#description_fr').val());
                formData.append("description_ar", $('#description_ar').val());
                formData.append("description_en", $('#description_en').val());

                var images = myDropzone.files;
                images.forEach(image => {
                    formData.append("images", image);
                });

                var products = [];
                $('#product_list select').each(function() {
                    products.push($(this).val());
                });
                formData.append("products", products);

                console.log(formData)
                $.ajax({
                    url: '/packs/add',
                    method: 'post',
                    contentType: "application/json",
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        console.log(response);
                        Swal.fire({
                            icon: 'success',
                            title: 'pack Added!',
                            text: 'The pack has been added successfully.',
                            confirmButtonText: 'OK'
                        }).then(() => {
                            location.reload();
                        });
                    },
                    error: function(error) {
                        console.log(error)
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Something went wrong. Please try again.',
                            confirmButtonText: 'OK'
                        });
                    }
                });
            });
        </script>
