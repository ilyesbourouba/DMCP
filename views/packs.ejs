        <script>
            // UPDATE THE PRODUCT
            var edited_img = false;
            $(document).on("click", "a[id='edit_btn']", function() {
                edited_img = false;
                $("#image_viewer").empty();

                var products = `<%- JSON.stringify(products) %>`;
                products = JSON.parse(products);

                let id = $(this).attr("data-id");

                let name_fr = $(this).attr("data-nom_fr");
                let name_en = $(this).attr("data-nom_en");
                let name_ar = $(this).attr("data-nom_ar");

                let description_fr = $(this).attr("data-description_fr");
                let description_en = $(this).attr("data-description_en");
                let description_ar = $(this).attr("data-description_ar");
                let image = $(this).attr("data-image");

                let total_price = $(this).attr("data-tota_price");
                let selected_products = JSON.parse($(this).attr("data-products"));

                $("#edit_id").val(id);

                $("#edit_name_fr").val(name_fr);
                $("#edit_name_en").val(name_en);
                $("#edit_name_ar").val(name_ar);

                $("#edit_description_fr").val(description_fr);
                $("#edit_description_en").val(description_en);
                $("#edit_description_ar").val(description_ar);

                $("#edit_price").text(total_price + " DA");
                if (image) {
                    edited_img = true;

                    let imageHtml = `
                                <div class="col-md-4">
                                    <div class="card card-profile card-plain image-card">
                                        <div class="card-body text-center bg-white shadow border-radius-lg p-3" style="border :2px solid #82d616">
                                            <a href="javascript:;">
                                                <img class="w-100 border-radius-md" src="uploads/${image.trim()}" alt="Product Image">
                                            </a>
                                            <p class="mt-3 mb-1 d-md-block d-none">${image.split('/').pop().replace(/^\d+_/, '')}</p>
                                            <a href="#" class="mb-0 text-xs font-weight-bolder text-danger text-gradient text-uppercase delete-image delete-btn" data-image="${image.trim()}">delete</a>
                                        </div>
                                    </div>
                                </div>
                            `;

                    $("#image_viewer").append(imageHtml);
                    $("#upload_container").hide();
                }
                console.log(products);
                console.log("selected_products:", selected_products);
                // Create the product list
                let product_list = $("#edit_product_list");
                product_list.html("");

                selected_products.forEach(product => {
                    let selected = products.find(p => p.id == product.id);
                    let productItem = `
                        <div class="col-lg-3 product-item">
                            <div class="input-group mb-3">
                                <select class="form-control product-select" name="products[]">
                                    <option value="${selected.id}" data-price="${selected.price}" ${selected ? "selected" : ""}>${selected.name_fr}</option>
                                </select>
                                <button type="button" class="badge bg-gradient-danger remove_product" style="border-color:#ef4444">X</button>
                            </div>
                        </div>
                    `;
                    product_list.append(productItem);
                });

                updateTotalPriceEdit();

                // Remove previously bound event handlers before adding new ones
                $("#add_product_edit").off("click").on("click", function() {
                    let productItem = `
                        <div class="col-lg-3 product-item">
                            <div class="input-group mb-3">
                                <select class="form-control product-select" name="products[]">
                                    <% products.forEach(product => { %>
                                        <option value="<%= product.id %>" data-price="<%= product.price %>"><%= product.name_fr %></option>
                                    <% }) %>
                                </select>
                                <button type="button" class="badge bg-gradient-danger remove_product" style="border-color:#ef4444">X</button>
                            </div>
                        </div>
                    `;
                    product_list.append(productItem);
                    updateTotalPriceEdit();
                });

                // Use delegated event handling to avoid multiple bindings
                product_list.off("click", ".remove_product").on("click", ".remove_product", function() {
                    $(this).closest(".product-item").remove();
                    updateTotalPriceEdit();
                });

                // Update price when changing the selected product
                product_list.off("change", ".product-select").on("change", ".product-select", updateTotalPriceEdit);

                function updateTotalPriceEdit() {
                    let total = 0;
                    $("#edit_product_list select").each(function() {
                        const selectedOption = $(this).find("option:selected");
                        total += parseFloat(selectedOption.attr("data-price")) || 0;
                    });
                    $("#edit_price").text(total.toFixed(2) + " DA");
                }
            });
            // Delete image
            $(document).on("click", ".delete-image", function(e) {
                e.preventDefault();

                let imageElement = $(this).closest(".col-md-4"); // Récupère le conteneur de l'image
                let imageName = $(this).attr("data-image"); // Récupère le nom de l'image
                let pack_id = $("#edit_id").val(); // ID du produit

                $.ajax({
                    url: "/packs/deleteimage", // Endpoint pour supprimer l'image côté serveur
                    type: "DELETE",
                    data: {
                        image: imageName,
                        id: pack_id
                    },
                    success: function(response) {
                        if (response.success) {
                            imageElement.remove(); // Supprime l'image du DOM après succès
                            $("#upload_container").show();
                            edited_img = false;
                        } else {
                            alert("Erreur lors de la suppression de l'image.");
                        }
                    },
                    error: function() {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Something went wrong. Please try again.',
                            confirmButtonText: 'OK'
                        });
                    }
