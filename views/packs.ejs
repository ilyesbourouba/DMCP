                formData.append("name_fr", $('#edit_name_fr').val());
                formData.append("name_en", $('#edit_name_en').val());
                formData.append("name_ar", $('#edit_name_ar').val());

                formData.append("description_fr", $('#edit_description_fr').val());
                formData.append("description_en", $('#edit_description_en').val());
                formData.append("description_ar", $('#edit_description_ar').val());

                let products = [];
